    var valorcompra = Math.abs(parseInt(document.getElementById("valor-compra").getAttribute("data-valor-compra")));
    var valorvenda = Math.abs(parseInt(document.getElementById("valor-venda").getAttribute("data-valor-venda")));
    console.log(valorcompra);
    new Morris.Donut({
        // ID of the element in which to draw the chart.
        element: 'myfirstchart',
        // Chart data records -- each entry in this array corresponds to a point on
        // the chart.
        data: [
            { label: "Valor de Vendas", value: valorcompra },
            { label: "Valor de Compras", value: valorvenda }
        ]
    });
